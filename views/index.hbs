<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <title>Listaço</title>
</head>
<body>
    <div class="container centralized">
        <h1>Listaço</h1>
        <a href="/login">Logout</a>
    </div>
    <div class="empty"></div>
    <div class="listbox xover" id="listbox">
        <div class="container centralized list" ondragover="allowDrop(event)" ondrop="drop(event, this)" id="list1" onmouseenter="appearbtn(this)" onmouseleave="hidebtn(this)">
            <h5 class="del" type="button" style="width: fit-content;" onclick="deleteEl(this)" hidden>X</h5>
            <input hidden="" type="number" value="0">
            <button class="btn item" id="createcard" type="button" onclick="newCard(this)">Adicionar novo cartão + </button>
        </div>
        <div class="container centralized list" id="final">
            <button class="btn item" id="createlist" type="button" onclick="newList()">Adicionar nova lista +</button>
        </div>
    </div>
    <div>
        <button onclick="save()" class="btn btn-primary" type="button" style="position: fixed; right: 10px; top: 10px;">Save</button>
    </div>
    <div class="container panel" id="panel" hidden>
        <input type="text" class="form-control" placeholder="Nome" id="inp">
        {{!-- <h5>Sem anotações</h5> --}}
        <div id="innerPanel" class="pad10 centralized xover">
            <label for="innerText">Descrição</label>
            <div class="pad10"></div>
            <textarea class="form-control" name="innerText" id="innerText" cols="10" rows="4"></textarea>
            <div class="pad10"></div>
            <button class="btn btn-primary" onclick="createChecklist()">Adicionar Checklist</button>
            <div class="pad10"></div>
        </div>
            <button onclick="closePanel()" style="position: absolute; right: 78px; bottom: 5px;" class="btn btn-primary">Cancelar</button>
            <button onclick="savePanel()" style="position: absolute; right: 5px; bottom: 5px;" class="btn btn-primary">Salvar</button>
    </div>
    <div id="inps" hidden></div>
</body>
{{#if list}}
<script>
    list = {{list}};
    item = [];
</script>
{{/if}} 
{{#unless list}}
<script>
    list = false;
    item = [];
</script>
{{/unless}}
{{#each item}}
    <script>
        item[item.length] = "{{this}}"
    </script>
{{/each}}
<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
<script src="/index.js"></script>
</html>